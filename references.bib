	journal = {The Astrophysical Journal},
	author = {Dai, X. and Assef, R. J. and Kochanek, C. S. and Brodwin, M. and Brown, M. J. I. and Caldwell, N. and Cool, R. J. and Dey, A. and Eisenhardt, P. and Eisenstein, D. and Gonzalez, A. H. and Jannuzi, B. T. and Jones, C. and Murray, S. S. and Stern, D.},
