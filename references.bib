	journal = {The Astrophysical Journal},
	author = {Peca, Alessandro and Cappelluti, Nico and Urry, C. Megan and LaMassa, Stephanie and Marchesi, Stefano and Ananna, Tonima Tasnim and Baloković, Mislav and Sanders, David and Auge, Connor and Treister, Ezequiel and Powell, Meredith and Turner, Tracey Jane and Kirkpatrick, Allison and Tian, Chuan},
