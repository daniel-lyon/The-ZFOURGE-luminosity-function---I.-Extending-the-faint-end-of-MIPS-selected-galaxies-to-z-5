ADS Bibcode: 2020MNRAS.498.5581B},
	keywords = {Astrophysics - Astrophysics of Galaxies, cD, galaxies: elliptical and lenticular, galaxies: evolution, galaxies: general, galaxies: photometry, galaxies: spiral, galaxies: star formation},
