	issn = {1323-3580},
	url = {https://ui.adsabs.harvard.edu/abs/2023PASA...40...43H},
	doi = {10.1017/pasa.2023.42},
	abstract = {To explore the role environment plays in influencing galaxy evolution at high redshifts, we study \$2.0{\textbackslash}leq z{\textless}4.2\$ environments using the FourStar Galaxy Evolution (ZFOURGE) survey. Using galaxies from the COSMOS legacy field with \$\{{\textbackslash}rm log(M\_\{*\}/M\_\{{\textbackslash}odot\})\}{\textbackslash}geq9.5\$ , we use a seventh nearest neighbour density estimator to quantify galaxy environment, dividing this into bins of low-, intermediate-, and high-density. We discover new high-density environment candidates across \$2.0{\textbackslash}leq z{\textless}2.4\$ and \$3.1{\textbackslash}leq z{\textless}4.2\$ . We analyse the quiescent fraction, stellar mass and specific star formation rate (sSFR) of our galaxies to understand how these vary with redshift and environment. Our results reveal that, across \$2.0{\textbackslash}leq z{\textless}2.4\$ , the high-density environments are the most significant regions, which consist of elevated quiescent fractions, \$\{{\textbackslash}rm log(M\_\{*\}/M\_\{{\textbackslash}odot\})\}{\textbackslash}geq10.2\$ massive galaxies and suppressed star formation activity. At \$3.1{\textbackslash}leq z{\textless}4.2\$ , we find that high-density regions consist of elevated stellar masses but require more complete samples of quiescent and sSFR data to study the effects of environment in more detail at these higher redshifts. Overall, our results suggest that well-evolved, passive galaxies are already in place in high-density environments at \$z{\textbackslash}sim2.4\$ , and that the Butcher–Oemler effect and SFR-density relation may not reverse towards higher redshifts as previously thought.},
	urldate = {2024-04-21},
	journal = {Publications of the Astronomical Society of Australia},
	author = {Hartzenberg, Georgia R. and Cowley, Michael J. and Hopkins, Andrew M. and Allen, Rebecca J.},
	month = sep,
	year = {2023},
	note = {ADS Bibcode: 2023PASA...40...43H},
	keywords = {Astrophysics - Astrophysics of Galaxies},
	pages = {e043},
}

