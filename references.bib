ADS Bibcode: 2020MNRAS.491..740Y},
	keywords = {Astrophysics - Astrophysics of Galaxies, Astrophysics - High Energy Astrophysical Phenomena, Astrophysics - Instrumentation and Methods for Astrophysics, X-rays: general, galaxies: nuclei, methods: data analysis, methods: observational, quasars: general},
