	note = {ADS Bibcode: 2012MNRAS.419.2797F},
	keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics, galaxies: active, galaxies: nuclei, methods: numerical, quasars: general},
	pages = {2797--2820},
}

