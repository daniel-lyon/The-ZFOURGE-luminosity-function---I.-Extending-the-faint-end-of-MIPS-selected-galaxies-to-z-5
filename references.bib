@article{casey_redshift_2012,
	title = {A {REDSHIFT} {SURVEY} {OF} {HERSCHEL} {FAR}-{INFRARED} {SELECTED} {STARBURSTS} {AND} {IMPLICATIONS} {FOR} {OBSCURED} {STAR} {FORMATION}},
