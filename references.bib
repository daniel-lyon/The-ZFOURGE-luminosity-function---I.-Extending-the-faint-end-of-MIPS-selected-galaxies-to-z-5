	note = {Publisher: OUP
ADS Bibcode: 2009MNRAS.399L.128S},
	keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics, cosmology: theory, galaxies: statistics, large-scale structure of Universe, methods: numerical},
	pages = {L128--L131},
}

@article{springel_simulations_2005,
	title = {Simulations of the formation, evolution and clustering of galaxies and quasars},
	volume = {435},
	issn = {0028-0836},
	url = {https://ui.adsabs.harvard.edu/abs/2005Natur.435..629S},
