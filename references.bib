	keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics, galaxies: luminosity function, galaxies: starburst, mass function, ultraviolet: galaxies},
	pages = {257--281},
}

@article{toba_9_2013,
	title = {The 9 and 18 {Micrometer} {Luminosity} {Functions} of {Various} {Types} of {Galaxies} with {AKARI}: {Implication} for the {Dust} {Torus} {Structure} of {AGN}},
