@article{riess_comprehensive_2022,
	title = {A {Comprehensive} {Measurement} of the {Local} {Value} of the {Hubble} {Constant} with 1 km s-1 {Mpc}-1 {Uncertainty} from the {Hubble} {Space} {Telescope} and the {SH0ES} {Team}},
