	keywords = {Astrophysics - Astrophysics of Galaxies, Astrophysics - High Energy Astrophysical Phenomena, X-rays: galaxies, galaxies: active, galaxies: evolution, galaxies: luminosity function, mass function},
	pages = {1892--1927},
}

@article{singal_x-ray_2022,
