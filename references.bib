	note = {ADS Bibcode: 2009ApJ...697..506D},
	keywords = {Astrophysics - Cosmology and Extragalactic Astrophysics, Astrophysics - Galaxy Astrophysics, TSS, galaxies: evolution, galaxies: luminosity function, mass function},
