@article{silk_unleashing_2013,
	title = {Unleashing {Positive} {Feedback}: {Linking} the {Rates} of {Star} {Formation}, {Supermassive} {Black} {Hole} {Accretion}, and {Outflows} in {Distant} {Galaxies}},
