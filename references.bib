	note = {ADS Bibcode: 2015ApJ...807L...2K},
	keywords = {Astrophysics - Astrophysics of Galaxies, Astrophysics - Cosmology and Nongalactic Astrophysics, galaxies: clusters: individual: Coma, galaxies: evolution, galaxies: structure},
	pages = {L2},
}

