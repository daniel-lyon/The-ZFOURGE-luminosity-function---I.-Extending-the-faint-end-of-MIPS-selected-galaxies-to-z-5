	journal = {The Astrophysical Journal Supplement Series},
	author = {Giacconi, Riccardo and Zirm, Andrew and Wang, JunXian and Rosati, Piero and Nonino, Mario and Tozzi, Paolo and Gilli, Roberto and Mainieri, Vincenzo and Hasinger, Guenther and Kewley, Lisa and Bergeron, Jacqueline and Borgani, Stefano and Gilmozzi, Roberto and Grogin, Norman and Koekemoer, Anton and Schreier, Ethan and Zheng, Wei and Norman, Colin},
