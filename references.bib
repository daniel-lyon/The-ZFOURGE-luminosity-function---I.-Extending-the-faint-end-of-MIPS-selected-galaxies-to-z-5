@article{yan_spitzer_2004,
	title = {Spitzer 24 {Micron} {Observations} of {Optical}/{Near}-{Infrared}-{Selected} {Extremely} {Red} {Galaxies}: {Evidence} for {Assembly} of {Massive} {Galaxies} at z{\textasciitilde}1-2?},
