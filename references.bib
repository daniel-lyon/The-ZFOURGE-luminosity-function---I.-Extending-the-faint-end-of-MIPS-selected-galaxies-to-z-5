	author = {Pouliasis, E. and Mountrichas, G. and Georgantopoulos, I. and Ruiz, A. and Gilli, R. and Koulouridis, E. and Akiyama, M. and Ueda, Y. and Garrel, C. and Nagao, T. and Paltani, S. and Pierre, M. and Toba, Y. and Vignali, C.},
	month = nov,
