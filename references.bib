	keywords = {Astrophysics - Astrophysics of Galaxies, galaxies: clusters: general, galaxies: formation, galaxies: groups: general, galaxies: haloes, galaxies: luminosity function, mass function},
	pages = {2798--2811},
}

@article{rigby_luminosity-dependent_2011,
