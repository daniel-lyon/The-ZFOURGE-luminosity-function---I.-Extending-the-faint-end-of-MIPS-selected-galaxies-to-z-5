	month = feb,
	year = {2011},
	note = {ADS Bibcode: 2011ApJ...728...56A},
	keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics, galaxies: active, galaxies: distances and redshifts, galaxies: luminosity function, mass function, quasars: general},
