	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Malefahlo, Eliab D. and Jarvis, Matt J. and Santos, Mario G. and White, Sarah V. and Adams, Nathan J. and Bowler, Rebecca A. A.},
