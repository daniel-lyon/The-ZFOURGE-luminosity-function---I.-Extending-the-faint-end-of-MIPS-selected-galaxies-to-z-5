	journal = {Astronomy and Astrophysics},
	author = {Fotopoulou, S. and Buchner, J. and Georgantopoulos, I. and Hasinger, G. and Salvato, M. and Georgakakis, A. and Cappelluti, N. and Ranalli, P. and Hsu, L. T. and Brusa, M. and Comastri, A. and Miyaji, T. and Nandra, K. and Aird, J. and Paltani, S.},
	month = mar,
