	note = {ADS Bibcode: 2015MNRAS.453..591S},
	keywords = {Astrophysics - Astrophysics of Galaxies, Astrophysics - Cosmology and Nongalactic Astrophysics, Astrophysics - High Energy Astrophysical Phenomena, X-rays: galaxies, galaxies: active, galaxies: evolution, infrared: galaxies},
	pages = {591--604},
