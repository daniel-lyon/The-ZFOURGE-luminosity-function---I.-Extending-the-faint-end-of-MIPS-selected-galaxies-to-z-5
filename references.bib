	keywords = {1234, 1622, 1684, 611, 734, 796, Astronomical techniques, Astrophysics - Astrophysics of Galaxies, Astrophysics - Instrumentation and Methods for Astrophysics, Galaxy photometry, High-redshift galaxies, Initial mass function, Photometry, Stellar populations},
