	note = {ADS Bibcode: 2016ApJ...820...65Y},
	keywords = {Astrophysics - Astrophysics of Galaxies, Astrophysics - High Energy Astrophysical Phenomena, galaxies: active, galaxies: luminosity function, mass function, radio continuum: galaxies},
	pages = {65},
}

@article{yuan_effect_2016,
	title = {Effect of {Spectral} {Index} {Distribution} on {Estimating} the {AGN} {Radio} {Luminosity} {Function}},
