	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {McNaught-Roberts, Tamsyn and Norberg, Peder and Baugh, Carlton and Lacey, Cedric and Loveday, J. and Peacock, J. and Baldry, I. and Bland-Hawthorn, J. and Brough, S. and Driver, Simon P. and Robotham, A. S. G. and Vázquez-Mata, J. A.},
