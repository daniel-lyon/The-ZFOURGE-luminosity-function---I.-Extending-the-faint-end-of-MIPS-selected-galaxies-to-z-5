@article{van_dokkum_second_2019,
	title = {A {Second} {Galaxy} {Missing} {Dark} {Matter} in the {NGC} 1052 {Group}},
	volume = {874},
	issn = {0004-637X},
	url = {https://ui.adsabs.harvard.edu/abs/2019ApJ...874L...5V},
	doi = {10.3847/2041-8213/ab0d92},
	abstract = {The ultra-diffuse galaxy NGC1052-DF2 has a very low velocity dispersion, indicating that it has little or no dark matter. Here we report the discovery of a second galaxy in this class, residing in the same group. NGC1052-DF4 closely resembles NGC1052-DF2 in terms of its size, surface brightness, and morphology; has a similar distance of \{D\vphantom{\{}\}sbf\}=19.9+/- 2.8 \{Mpc\}; and also has a population of luminous globular clusters extending out to ≥slant 7 \{kpc\} from the center of the galaxy. Accurate radial velocities of the diffuse galaxy light and seven of the globular clusters were obtained with the Low Resolution Imaging Spectrograph on the Keck I telescope. The velocity of the diffuse light is identical to the median velocity of the clusters, \{v\vphantom{\{}\}sys\}={\textless} \{v\vphantom{\{}\}gc\}{\textgreater} =1445 \{km\} \{\{\{s\}\}\}-1, and close to the central velocity of the NGC 1052 group. The rms spread of the globular cluster velocities is very small at \{σ \vphantom{\{}\}obs\}=5.8 \{km\} \{\{\{s\}\}\}-1. Taking observational uncertainties into account we determine an intrinsic velocity dispersion of \{σ \vphantom{\{}\}intr\}=\{4.2\}-2.2+4.4 \{km\} \{\{\{s\}\}\}-1, consistent with the expected value from the stars alone (\{σ \vphantom{\{}\}stars\}≈ 7 \{km\} \{\{\{s\}\}\}-1) and lower than expected from a standard NFW halo (\{σ \vphantom{\{}\}halo\}∼ 30 \{km\} \{\{\{s\}\}\}-1). We conclude that NGC1052-DF2 is not an isolated case but that a class of such objects exists. The origin of these large, faint galaxies with an excess of luminous globular clusters and an apparent lack of dark matter is, at present, not understood.},
	urldate = {2023-11-24},
	journal = {The Astrophysical Journal},
	author = {van Dokkum, Pieter and Danieli, Shany and Abraham, Roberto and Conroy, Charlie and Romanowsky, Aaron J.},
	month = mar,
	year = {2019},
	note = {ADS Bibcode: 2019ApJ...874L...5V},
	keywords = {Astrophysics - Astrophysics of Galaxies, galaxies: evolution, galaxies: structure},
	pages = {L5},
}

